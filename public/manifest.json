{
  "manifest_version": 2,
  "name": "Anti-Dark Pattern Extension",
  "version": "1.0",
  "permissions": ["activeTab", "storage"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_width": 400,
    "default_height": 600
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "32": "images/img.png"
  }
}
